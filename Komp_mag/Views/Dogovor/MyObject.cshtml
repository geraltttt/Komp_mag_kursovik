@model IEnumerable<Agent.Models.Dogovor>


<ul id="groups">
    @foreach (var item in (IEnumerable<Agent.Models.GroupDog>)ViewData["Groups"])
    {
        <li>
            <div>
                @Html.ActionLink(item.Name, "MyObject", new { id = item.Id })
            </div>
        </li>
    }
</ul>
<p>
    @Html.ActionLink("Начальная", "../Home/Index")
    <br>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDKl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDTr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>

        <th> Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupDog.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarif.Object)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <input type="button" class="btn btn-default" value="Редактировать" onclick="location.href = '@Url.Action("Edit", new {id = item.Id})'" />
                <input type="button" class="btn btn-default" value="Просмотреть" onclick="location.href = '@Url.Action("Details", new {id = item.Id})'" />
                <input type="button" class="btn btn-default" value="Удалить" onclick="location.href = '@Url.Action("Delete", new {id = item.Id})'" />
                @if (item.IDGroup == 3)
                {
                    <input type="button" class="btn btn-default" value="Оформить гарантийный случай" onclick="location.href = '@Url.Action("../Str/Create", new {id = item.Id})'" />
                } 
            </td>
        </tr>
    }
</table>